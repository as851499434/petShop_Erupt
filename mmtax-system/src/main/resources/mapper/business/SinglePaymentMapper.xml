<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mmtax.business.mapper.SinglePaymentMapper">

    <resultMap type="SinglePayment" id="SinglePaymentResult">
        <result property="id" column="id"/>
        <result property="idCardNo" column="id_card_no"/>
        <result property="amount" column="amount"/>
        <result property="providerId" column="provider_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <select id="getSinglePaymentByIdCard" resultMap="SinglePaymentResult">
        select *
        from tbl_single_payment
        where id_card_no = #{idCardNo}
          and month(create_time) = month(now())
    </select>
    <update id="updateByIdCard">
        update
            tbl_single_payment
        set amount = amount + #{amount}
        where id_card_no = #{idCardNo}
          and month(create_time) = month(now())
    </update>

</mapper>